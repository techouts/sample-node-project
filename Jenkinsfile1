pipeline {
    agent any
    stages {
        stage('Deploy to Windows VM') {
            steps {
                script {
                    sshagent(['windows-ssh-credential-id']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no tech@172.168.168.254 "cmd.exe /c echo SSH Connection Successful"
                        '''
                    }
                }
            }
        }
    }
}
